@using firstbelt.Models
@model firstbelt.Models.Activity
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login & Registration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>

        ul {
            list-style-type: none;
            padding: 0;
            overflow: hidden;
            margin: 0px 0px 15px 0px;
        }
        li {
            float: right;
            display: block;
            padding: 8px;
            background-color: lightcyan;
        }
    </style>
</head>

<body>
<div id="container">
    <div id="navbar">
        <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/logout">Logout</a></li>
            <li>Welcome ViewBag.CurrUser</li>
            <li>Dojo Activity Center</li>
        </ul>
    </div>
    <h1>@ViewBag.ThisActivity.Title</h1>
    <h3>@ViewBag.ThisActivity.Time</h3>
    <h3>@ViewBag.ThisActivity.Date</h3>
    <h2>@ViewBag.ThisActivity.Duration @ViewBag.ThisActivity.DurType</h2>
    <h2>@ViewBag.ThisActivity.Desc</h2>
    <h2>@ViewBag.ThisActivity.Participants</h2>

</div>
</body>